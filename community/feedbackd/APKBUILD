# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/phosh <newbyte@postmarketos.org>
pkgname=feedbackd
pkgver=0.8.4
pkgrel=0
pkgdesc="Daemon to provide haptic, LED, and audio feedback triggered by application events"
url="https://gitlab.freedesktop.org/agx/feedbackd"
arch="all"
license="GPL-3.0-or-later"
depends="dbus feedbackd-device-themes"
makedepends="
	gi-docgen
	glib-dev
	gmobile-dev
	gobject-introspection-dev
	gsound-dev
	gtk-doc
	json-glib-dev
	libgudev-dev
	meson
	vala
	umockdev-dev
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://sources.phosh.mobi/releases/feedbackd/feedbackd-$pkgver.tar.xz"
install="$pkgname.pre-install $pkgname.pre-upgrade"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dgtk_doc=true \
		-Dudev=true \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	rm -r "$pkgdir"/usr/lib/systemd/
}

sha512sums="
da627951ac6672e9b578ed975dbeddb0ec335aba528f6031da2c94e4d139d420f14fac28467aea2e821bd8c77439b35a50962423a05119c5229e17bb3a0e9a50  feedbackd-0.8.4.tar.xz
"
