# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=fractal
pkgver=12
_rustsdkrel=872713c4bc024ac9246dfa72f834584ebe92a3d7
pkgrel=0
pkgdesc="Matrix group messaging app"
url="https://wiki.gnome.org/Apps/Fractal"
arch="x86_64 aarch64 ppc64le" # limited by Rust + crate dependencies
license="GPL-3.0-or-later"
depends="
	dbus:org.freedesktop.Secrets
	glycin-loaders
	xdg-utils
	gst-plugins-rs-gtk4
	"
makedepends="
	cargo
	clang-libclang
	cmake
	dbus-dev
	desktop-file-utils
	glib-dev
	gmp-dev
	grass
	gspell-dev
	gst-editing-services-dev
	gst-plugins-bad-dev
	gst-plugins-base-dev
	gstreamer-dev
	gtk4.0-dev
	gtksourceview5-dev
	lcms2-dev
	libadwaita-dev
	libseccomp-dev
	libshumate-dev
	meson
	openssl-dev
	pipewire-dev
	xdg-desktop-portal-dev
	"
options="!check" # no tests
subpackages="$pkgname-lang"
source="
	$pkgname-$pkgver.tar.gz::https://gitlab.gnome.org/GNOME/fractal/-/archive/$pkgver/fractal-$pkgver.tar.gz
	matrix-rust-sdk-$_rustsdkrel.tar.gz::https://github.com/matrix-org/matrix-rust-sdk/archive/$_rustsdkrel.tar.gz
	0000-lower-msrv.patch
	0001-Revert-chore-bump-the-MSRV-to-1.88.patch
	0002-Revert-chore-Fix-new-clippy-lints.patch
	0003-Revert-refactor-base-use-let-chains-where-the-commen.patch
	0004-Revert-chore-base-clippy-fixes.patch
	0005-remove-final-let-chain.patch
"

case "$CARCH" in
	x86)
		export CFLAGS="$CFLAGS -fno-stack-protector"
		;;
esac

prepare() {
	mkdir vendored
	mv "$srcdir"/matrix-rust-sdk-"$_rustsdkrel" vendored/matrix-sdk

	default_prepare
}

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

