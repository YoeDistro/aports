# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma-workspace-wallpapers
pkgver=6.3.6
pkgrel=0
pkgdesc="Wallpapers for the Plasma Workspace"
arch="noarch"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

_repo_url="https://invent.kde.org/plasma/plasma-workspace-wallpapers.git"
source="https://download.kde.org/$_rel/plasma/$pkgver/plasma-workspace-wallpapers-$pkgver.tar.xz"
options="!check" # No code to test

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1e2700a9bb011df3b6c11f9d62eb2a06fb7d9d726136e9022a0b0ad9a8fe84c2758ed617a1d587c9bb2f5a9f640d9edeaa7e42c10cf171d307dfe3bdc8db26a9  plasma-workspace-wallpapers-6.3.6.tar.xz
"
