# Contributor: jane400 <alpine@j4ne.de>
# Maintainer: team/phosh <newbyte@postmarketos.org>
pkgname=stevia
pkgver=0.47.0
pkgrel=1
pkgdesc="Alternative OSK for phosh"
arch="all"
url="https://gitlab.gnome.org/guidog/stevia"
license="GPL-3.0-or-later"
subpackages="$pkgname-doc $pkgname-lang"
makedepends="
	cmd:rst2man
	elogind-dev
	feedbackd-dev
	glib-dev
	gmobile-dev
	gnome-desktop-dev
	gtk+3.0-dev
	hunspell-dev
	json-glib-dev
	libhandy1-dev
	meson
	wayland-dev
	wayland-protocols
	"
checkdepends="xvfb-run"
source="https://gitlab.gnome.org/guidog/stevia/-/archive/v$pkgver/stevia-v$pkgver.tar.gz"
builddir="$srcdir/stevia-v$pkgver"

provides="phosh-keyboard=0 phosh-osk-stub=$pkgver-r$pkgrel"
provider_priority=1
replaces="phosh"

case "$CARCH" in
	# https://gitlab.gnome.org/guidog/stevia/-/issues/61
	s390x) options="$options !check" ;;
esac

build() {
	abuild-meson \
		-Db_lto=true \
		-Dman=true \
		. output
	meson compile -C output
}

check() {
	xvfb-run -a meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
8551bb988a458f94c529c63035febb058cc2365b8f63a83bc00ffd480cac1fba4e5ba0f60826ebffb422ce2ef50a26938607fbdf38440245aa2bcfb58833f864  stevia-v0.47.0.tar.gz
"
